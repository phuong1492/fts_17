<% provide(:title, @user.username) %>
<div class="row">
  <div class="box">
    <div class="col-lg-12">
      <hr>
      <h2 class="intro-text text-center">
        <strong>Information User</strong>
      </h2>
      <hr>
      <div class="user_info">
        <div class="col-md-5">
          <p class="round-image-50"><%= image_tag(@user.avatar.url(:thumb)) %></p>
        </div>
        <div class = "col-md-5">
          <p>Username: <%= @user.username %></p>
          <p>Email: <%= @user.email %></p>
          <p>Create at: <%= @user.created_at%></p>
          <P>User type: <%= user_type @user %>
          <% if current_user?(@user) %>
            <p><%= link_to "Edit Account", edit_user_registration_path %></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>